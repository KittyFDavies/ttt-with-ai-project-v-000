#!/usr/bin/env ruby

require_relative '../config/environment'
require_relative "../lib/players/computer.rb"
require_relative "../lib/players/human.rb"
require_relative "../lib/player.rb"

puts "Welcome to Tic-tac-toe!"
puts "Do you want to play against a human, against an AI, or watch an AI match? Type 'human', 'AI', or 'AI match'."
game_players = gets.strip
if game_players == "AI"
  puts "If a human vs. AI match, who should go first? Type 'human' or 'AI'."
  player1 = gets.strip
  if player1 == "human"
    p1 = Players::Human.new("X")
    p2 = Players::Computer.new("0")
  elsif player1 == "AI"
    p1 = Players::Computer.new("X")
    p2 = Players::Human.new("0")
  end
elsif game_players == "human"
  p1 = Players::Human.new("X")
  p2 = Players::Human.new("0")
elsif game_players == "AI match"
  p1 = Players::Computer.new("X")
  p2 = Players::Computer.new("0")
end
game = Game.new(p1, p2, b)
game.play
when game.over? == true
  puts "Do you want to play again? Y/N"
  answer = gets.strip
  if answer == "Y"
  elsif answer == "N"
    puts "Thanks for playing!"
  end
